<%= form_for @wiki do |f| %>
  <% flash[:notice] = f.object.errors.full_messages.join(",\n ") if f.object.errors.any? %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter the body" %>
  </div>
 <% if current_user.admin? || (current_user.premium? && (current_user.id == @wiki.user_id || new_view )) %>
   <div class="form-group">
     <%= f.label :private, class: 'checkbox' do %>
     <%= f.check_box :private %> Private wiki
   <% end %>
   </div>
 <% end %>
  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
