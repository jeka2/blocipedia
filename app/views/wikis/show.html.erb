<hi><%= @wiki.title %></hi>
<%= @wiki.id %>
<div class="row">
  <div class="col-md-9">
      <%= markdown(@wiki.body) %>
  </div>
  <div class="col-md-3">
    <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-warning' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this article?' } %>
    <h6>For possible collaboration on the article, consider the following users:</h6>
    <%= form_tag (controller: "search_suggestions", action: "index", method: "get") do %>
      <input class="seach full width" id="searchbar" name="query" placeholder="Search User by Email" type="text"
      autocomplete="off">
    <% end %>
</div>

<br>
    <%= link_to "Return", root_path, class: 'glyphicon glyphicon-circle-arrow-left' %>
</br>
